@inject Microsoft.Extensions.Configuration.IConfiguration Configuration

@{

}
<nav class="main-header navbar navbar-expand navbar-light">
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#"><i class="fa fa-bars"></i></a>
        </li>
    </ul>
    <ul class="navbar-nav ml-auto">
        @if (User.Identity.IsAuthenticated)
        {
            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a asp-area="Identity" asp-page="/Account/Manage/Index" class="nav-link">
                        Settings
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-page="/Identity/Admin/Dashboard" class="nav-link">
                        Management
                    </a>
                </li>
            }
            else if (User.IsInRole("Dashboard"))
            {
                <li class="nav-item">
                    <a asp-page="./Pages/Identity/Admin/Dashboard" class="nav-link">
                        @User.Identity.Name Dashboard
                    </a>
                </li>
            }
            else if (User.IsInRole("Parent"))
            {
                <li class="nav-item">
                    <a asp-area="Identity" asp-page="/Account/Manage/Index" class="nav-link">
                        Settings
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-page="/Identity/Parent/Manage" class="nav-link">
                        Profile
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-area="Identity" asp-page="/Account/Logout" class="nav-link">
                        Log Out
                    </a>
                </li>
            }
        }
        else
        {
            <li class="nav-item">
                <a asp-area="Identity" asp-page="/Account/Login" class="nav-link">
                    Sign In/Register
                </a>
            </li>
        }
        <li class="nav-item">
            <div class="theme-switch-wrapper nav-link">
                <label class="theme-switch" for="checkbox">
                    <input type="checkbox" id="checkbox" />
                    <span class="slider round"></span>
                </label>
            </div>
        </li>
        @*        <li class="nav-item">
        <em class="nav-link">Enable Dark Mode!</em>
        </li>*@
    </ul>
</nav>

